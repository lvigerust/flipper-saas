{
	"name": "vw-services",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"stripe:webhooks": "stripe listen --forward-to localhost:5173/api/stripe/webhook",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"gen:types": "pnpx supabase gen types typescript --local > src/lib/supabase-types.ts && prettier --write src/lib/supabase-types.ts",
		"seed": "tsx --tsconfig scripts/tsconfig.json scripts/seed.ts"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.0.2",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-vercel": "^3.0.1",
		"@sveltejs/kit": "^1.5.0",
		"@types/detect-port": "^1.3.2",
		"@types/pg": "^8.10.1",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"detect-port": "^1.5.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.26.0",
		"pg": "^8.11.0",
		"postcss": "^8.4.23",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"stripe-event-types": "^2.3.0",
		"supabase": "^1.64.2",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"sveltekit-superforms": "^0.8.7",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.5.2",
		"tsx": "^3.12.7",
		"typescript": "^5.0.0",
		"vite": "^4.3.0",
		"zod": "^3.21.4"
	},
	"type": "module",
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"@supabase/auth-helpers-sveltekit": "^0.9.4",
		"@supabase/supabase-js": "^2.24.0",
		"daisyui": "^3.0.0",
		"dotenv": "^16.0.3",
		"stripe": "^12.7.0",
		"svelte-french-toast": "1.0.4-beta.0"
	}
}
